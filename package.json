{
  "name": "daaku-line-wrap",
  "author": "Naitik Shah <n@daaku.org>",
  "version": "1.0.3",
  "description": "A small line wrapping library.",
  "repository": "git@github.com:daaku/line-wrap",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "prettier": "prettier-config-daaku",
  "scripts": {
    "check:types": "tsc --noEmit",
    "check:lint": "eslint --fix --ext .ts --ext .tsx --ext .js --ext .jsx --ignore-pattern lib .",
    "check": "concurrently 'npm:check:*' 'npm:test'",
    "build:js": "tsc && rm -rf lib/__tests__",
    "build": "concurrently npm:check:lint npm:test npm:build:*",
    "test": "jest --modulePathIgnorePatterns 'lib/'"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "keywords": [
    "text",
    "line-wrap",
    "word-wrap"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "concurrently": "^4.1.0",
    "eslint": "^5.16.0",
    "eslint-config-daaku": "^1.0.4",
    "jest": "^24.8.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.1"
  }
}
