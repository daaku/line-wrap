{
  "name": "daaku-line-wrap",
  "author": "Naitik Shah <n@daaku.org>",
  "version": "1.0.2",
  "description": "A small line wrapping library.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "check:types": "tsc --noEmit",
    "check:lint": "eslint_d --fix --ext .ts --ext .tsx --ext .js --ext .jsx --ignore-pattern lib .",
    "check": "concurrently 'npm:check:*' 'npm:test'",
    "build:js": "tsc --sourceMap --target ES2018 --outDir lib && rm -rf lib/__tests__",
    "build": "concurrently npm:check:lint npm:test npm:build:*",
    "test": "jest --modulePathIgnorePatterns 'lib/'"
  },
  "jest": {
    "preset": "ts-jest"
  },
  "keywords": [
    "text",
    "line-wrap",
    "word-wrap"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "concurrently": "^4.1.0",
    "eslint": "^5.15.3",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": "^4.0.1",
    "eslint_d": "^7.3.0",
    "jest": "^24.5.0",
    "prettier": "^1.16.4",
    "ts-jest": "^24.0.2",
    "typescript": "^3.3.4000"
  }
}
